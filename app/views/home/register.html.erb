<section class="lulurpg">
	
	<%= form_tag :register_save, :method => 'post' do %>
	
		<input type="hidden" name="UserData[key_id]" value="<%= @key_id %>">
		
		<article>
			<a href="<%= root_url %>" class="logo">LuLu RPG</a>
		</article>
	
		<% if !@errors.nil? %>
			<article class="register-errors">
				<ul>
					<% @errors.each do |e| %>
						<li><%= e %></li>
					<% end %>
				</ul>
			</article>
		<% end %>
	
		<article class="lulurpg-register">
			<h1>registre-se para acessar os docs</h1>
		
			<dt>nome</dt>
			<dd><input type="text" value="<%= @data.try(:[], "name") %>" name="UserData[name]" maxlength=250 /></dd>
		
			<dt>email</dt>
			<dd><input type="text" value="<%= @data.try(:[], "login") %>" name="UserData[login]" maxlength=250 /></dd>
		
			<dt>senha (6 Ã  16 caracteres)</dt>
			<dd><input type="password" value="<%= @data.try(:[], "password") %>" name="UserData[password]" maxlength=16 /></dd>		
		</article>
	
		<article class="submit-options">
			<input type="submit" class="save-button" value="criar meu cadastro" />
		</article>
	<% end %>
	
</section>